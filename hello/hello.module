<?php

/* 
 * @file Hello Module
 */

function hello_block_info() {
  $blocks['hello'] = array(
    'info' => t('Hello World Block'),
  );
  
  return $blocks;
}

function hello_block_view($delta = '') {
  $block = array();
  
  switch($delta) {
    case 'hello':
      $block['subject'] = t('Hello World');
      
      $hour = date('G');
      $greeting = '';
      if ($hour < 12) {
        $greeting = t('Good morning @name!');
      }
      elseif ($hour < 18) {
        $greeting = t('Good afternoon @name!');
      }
      else {
        $greeting = t('Good evening @name!');
      }
      $block['content'] = t($greeting, array('@name' => $GLOBALS['user']->name));
      
      break;
  }
  
  return $block;
}