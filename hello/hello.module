<?php

/* 
 * @file Hello Module
 */

function hello_block_info() {
  $blocks['hello'] = array(
    'info' => t('Hello World Block'),
  );
  
  return $blocks;
}

function hello_block_view($delta = '') {
  $block = array();
  
  switch($delta) {
    case 'hello':
      $block['subject'] = t('Hello World');
      
      global $user;
      $content = t("Hello @name.", array('@name' => $user->name));
      
      $block['content'] = $content;
      break;
  }
  
  return $block;
}